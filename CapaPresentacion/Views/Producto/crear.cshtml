
@{
    ViewBag.Title = "crear";
}

<div class="container">
    <div class="col-md-offset-3 col-md-4">

        <h2>Agregar Productos</h2>
    </div>
    <br />
    <div class="col-md-offset-3 col-md-4">

        <form class="table-bordered" action="" method="post">

            <div class="form-group ">
                <label>ID:</label>

                <input type="text" name="txtId" value="" placeholder="Ingrese su ID" class="form-control" />
            </div>

            <div class="form-group">
                <label>Nombre:</label>

                <input type="text" name="txtNombre" value="" placeholder="Ingrese su nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label>Precio:</label>

                <input type="number" name="precio" value="" placeholder="Ingrese su precio" class="form-control" />
            </div>

            <button type="submit" class="btn btn-info " name="accion">Agregar</button>
        </form>
    </div>
</div>

